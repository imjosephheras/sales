# Increase PHP limits for photo uploads (Apache mod_php)
<IfModule mod_php.c>
    php_value max_file_uploads 120
    php_value upload_max_filesize 50M
    php_value post_max_size 200M
    php_value max_execution_time 300
    php_value max_input_time 300
</IfModule>

# Also support older Apache mod_php module names
<IfModule mod_php7.c>
    php_value max_file_uploads 120
    php_value upload_max_filesize 50M
    php_value post_max_size 200M
    php_value max_execution_time 300
    php_value max_input_time 300
</IfModule>

<IfModule mod_php8.c>
    php_value max_file_uploads 120
    php_value upload_max_filesize 50M
    php_value post_max_size 200M
    php_value max_execution_time 300
    php_value max_input_time 300
</IfModule>
