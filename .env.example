# ===========================================
# Environment Configuration (Template)
# ===========================================
# Copy this file to .env and fill in the
# actual values for your environment.
# ===========================================

# Database
DB_HOST=localhost
DB_NAME=your_database_name
DB_USER=your_database_user
DB_PASS=your_database_password
DB_CHARSET=utf8mb4

# SMTP / Email (Brevo)
SMTP_HOST=smtp-relay.brevo.com
SMTP_PORT=587
SMTP_USERNAME=your_smtp_username
SMTP_PASSWORD=your_smtp_password
SMTP_ENCRYPTION=tls
MAIL_FROM_EMAIL=your_from_email@example.com
MAIL_FROM_NAME=Sales Management System
MAIL_TO_EMAIL=admin@example.com
MAIL_TO_NAME=Administrator

# Application
APP_ENV=production
STORAGE_DISK=local

# FTP Server (File Storage)
# Set STORAGE_DISK=ftp to enable FTP storage
FTP_HOST=your_ftp_host
FTP_PORT=21
FTP_USERNAME=your_ftp_username
FTP_PASSWORD=your_ftp_password
FTP_ROOT=/
FTP_PASSIVE=true
